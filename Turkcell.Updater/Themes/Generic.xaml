<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:Turkcell.Updater.Controls"
    xmlns:converters="clr-namespace:Turkcell.Updater.Converters">

    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

    <Style x:Key="WrappingTextBlock" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style TargetType="customControls:UpdaterDialog">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customControls:UpdaterDialog">
                    <Grid x:Name="TransparentContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.Background>
                            <SolidColorBrush Color="Black" Opacity="0.7" />
                        </Grid.Background>
                        <Grid x:Name="GridContainer" Background="{TemplateBinding Background}" Width="480" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="100" />
                            </Grid.RowDefinitions>
                            <ScrollViewer x:Name="ScrollContent" Grid.Row="0">
                                <StackPanel Margin="24,0,24,18">
                                    <TextBlock x:Name="TxtTitle" Margin="0,16,-6,16" Style="{StaticResource PhoneTextTitle2Style}" Text="{TemplateBinding Title}" TextWrapping="Wrap" />
                                    <ContentPresenter x:Name="ContentPresenter" HorizontalAlignment="Stretch" />
                                </StackPanel>
                            </ScrollViewer>
                            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                                <Button x:Name="BtnPositive" Width="230" Margin="5" Command="{TemplateBinding PositiveButtonCommand}" Content="{TemplateBinding PositiveButtonText}" />
                                <Button x:Name="BtnNegative" Width="230" Margin="5" Command="{TemplateBinding NegativeButtonCommand}" Content="{TemplateBinding NegativeButtonText}" />
                            </StackPanel>

                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="customControls:UpdateContent">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customControls:UpdateContent">
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBlock x:Name="LblMessage" Style="{StaticResource PhoneTextNormalStyle}" TextWrapping="Wrap" Margin="0,8,0,8" Text="{TemplateBinding Message}" />
                        <Grid x:Name="GridWarnings" Visibility="Collapsed" Background="Coral" Margin="0,8,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Width="40" VerticalAlignment="Center" Source="Turkcell.Updater.Content\Images\updater_warning.png" Margin="5" />
                            <TextBlock Style="{StaticResource PhoneTextNormalStyle}" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,5,5,5" Text="{TemplateBinding Warnings}" />
                        </Grid>
                        <TextBlock x:Name="LblWhatIsNew" TextWrapping="Wrap" Margin="0,8,0,8" Text="{TemplateBinding WhatIsNew}" Style="{StaticResource PhoneTextSubtleStyle}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="customControls:MessageContent">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customControls:MessageContent">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MaxWidth="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image MaxWidth="80" Stretch="Uniform" Margin="5" Grid.Column="0" x:Name="Image" VerticalAlignment="Center" Source="{TemplateBinding ImageUrl}" />
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Style="{StaticResource PhoneTextNormalStyle}" TextWrapping="Wrap" Text="{TemplateBinding Message}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>